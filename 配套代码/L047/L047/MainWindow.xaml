<Window x:Class="L047.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:L047"
        mc:Ignorable="d"
        Title="MainWindow" Height="282" Width="669">
    <Window.Resources>
        <SolidColorBrush x:Key="myBrush" Color="GreenYellow"/>
    </Window.Resources>
    <Grid>
        <Label 
            Content="Label" 
            HorizontalAlignment="Left"
            Margin="100,50,0,0" 
            VerticalAlignment="Top" 
            Height="125" 
            Width="490" 
            FontSize="72" 
            FontWeight="Bold" 
            Background="{x:Static SystemColors.ControlDarkBrush}" 
            Foreground="{StaticResource myBrush}"/>

    </Grid>
</Window>
